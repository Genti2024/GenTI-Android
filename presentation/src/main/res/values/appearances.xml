<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Genti" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextAppearance.Genti.Headline1">
        <item name="fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingVertical">4sp</item>
    </style>

    <style name="TextAppearance.Genti.Headline2">
        <item name="fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingVertical">4sp</item>
    </style>

    <style name="TextAppearance.Genti.Headline3">
        <item name="fontFamily">@font/font_pretendard_light</item>
        <item name="android:textSize">19sp</item>
        <item name="android:paddingVertical">3sp</item>
    </style>

    <style name="TextAppearance.Genti.Headline4">
        <item name="fontFamily">@font/font_pretendard_semibold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingVertical">2.5sp</item>
    </style>

    <style name="TextAppearance.Genti.Headline5">
        <item name="fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingVertical">1.5sp</item>
    </style>

    <style name="TextAppearance.Genti.BodyLarge">
        <item name="fontFamily">@font/font_pretendard_light</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingVertical">3.5sp</item>
    </style>

    <style name="TextAppearance.Genti.BodyNormal">
        <item name="fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingVertical">2.5sp</item>
    </style>

    <style name="TextAppearance.Genti.BodySmall">
        <item name="fontFamily">@font/font_pretendard_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingVertical">2sp</item>
    </style>

    <style name="TextAppearance.Genti.BodyDescription">
        <item name="fontFamily">@font/font_pretendard_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingVertical">2sp</item>
    </style>

</resources>
