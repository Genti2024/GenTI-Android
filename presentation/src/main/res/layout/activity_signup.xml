<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="kr.genti.presentation.auth.signup.SignupViewModel" />

        <variable
            name="gender"
            type="kr.genti.domain.enums.Gender" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_signup_bg_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_signup_bg_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_signup_bg_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_signup_bg_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_signup_logo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_genti_3d"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_signup_title"
            style="@style/TextAppearance.Genti.BodySmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/signup_tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_signup_logo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/layout_birth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_signup_title">

            <TextView
                android:id="@+id/tv_signup_gender_title"
                style="@style/TextAppearance.Genti.BodyNormal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/signup_tv_gender_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btn_gender_male"
                style="@style/TextAppearance.Genti.Headline2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="10dp"
                android:background="@{vm.selectedGender == gender.MALE ? @drawable/shape_green1_line_8_rect : @drawable/shape_grey2_line_8_rect}"
                android:gravity="center"
                android:onClick="@{() -> vm.selectGender(gender.MALE)}"
                android:paddingVertical="4dp"
                android:text="@string/signup_tv_gender_male"
                android:textColor="@{vm.selectedGender == gender.MALE ? @color/green_1 : @color/grey_2}"
                app:layout_constraintEnd_toStartOf="@id/btn_gender_female"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_signup_gender_title" />

            <TextView
                android:id="@+id/btn_gender_female"
                style="@style/TextAppearance.Genti.Headline2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="40dp"
                android:background="@{vm.selectedGender == gender.FEMALE ? @drawable/shape_green1_line_8_rect : @drawable/shape_grey2_line_8_rect}"
                android:gravity="center"
                android:onClick="@{() -> vm.selectGender(gender.FEMALE)}"
                android:paddingVertical="4dp"
                android:text="@string/signup_tv_gender_female"
                android:textColor="@{vm.selectedGender == gender.FEMALE ? @color/green_1 : @color/grey_2}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/btn_gender_male"
                app:layout_constraintTop_toBottomOf="@id/tv_signup_gender_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_birth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btn_submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_gender">

            <TextView
                android:id="@+id/tv_signup_birth_title"
                style="@style/TextAppearance.Genti.BodyNormal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/signup_tv_birth_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btn_birth_year"
                style="@style/TextAppearance.Genti.Headline2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="16dp"
                android:background="@{vm.isYearSelected == true ? @drawable/shape_green1_line_8_rect : @drawable/shape_grey2_line_8_rect}"
                android:gravity="center"
                android:onClick="@{() -> vm.showYearPicker()}"
                android:paddingVertical="4dp"
                android:text="@={vm.selectedYearText}"
                android:textColor="@color/green_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_signup_birth_title"
                tools:text="2024ë…„" />

            <TextView
                android:id="@+id/tv_signup_birth_guide"
                style="@style/TextAppearance.Genti.BodySmall"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:onClick="@{() -> vm.showYearPicker()}"
                android:text="@string/signup_btn_birth_guide"
                android:textColor="@color/grey_4"
                android:visibility="@{vm.isYearSelected ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="@id/btn_birth_year"
                app:layout_constraintEnd_toEndOf="@id/btn_birth_year"
                app:layout_constraintStart_toStartOf="@id/btn_birth_year"
                app:layout_constraintTop_toTopOf="@id/btn_birth_year" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="80dp"
                android:background="@drawable/shape_grey6_fill_15_rect"
                android:visibility="@{vm.isYearSelected ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="@id/np_signup_birth"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/np_signup_birth" />

            <NumberPicker
                android:id="@+id/np_signup_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:datePickerMode="spinner"
                android:headerYearTextAppearance="@style/TextAppearance.Genti.Headline2"
                android:spinnersShown="true"
                android:visibility="@{vm.isYearSelected ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_birth_year" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btn_submit"
            style="@style/TextAppearance.Genti.Headline1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/sel_btn"
            android:enabled="@{vm.isAllSelected()}"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="@string/signup_btn_submit"
            android:textColor="@{vm.isAllSelected == true ? @color/white : @color/black}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>