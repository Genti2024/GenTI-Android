<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_bg_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_dialog_bg_grey_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/view_bg_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_dialog_bg_grey_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_quit" />

        <View
            android:layout_width="0dp"
            android:layout_marginTop="-20dp"
            android:layout_marginHorizontal="0.1dp"
            android:layout_height="0dp"
            android:background="@color/background_white"
            app:layout_constraintBottom_toTopOf="@id/view_bg_bottom"
            app:layout_constraintEnd_toEndOf="@id/view_bg_bottom"
            app:layout_constraintStart_toStartOf="@id/view_bg_bottom"
            app:layout_constraintTop_toBottomOf="@id/view_bg_top" />

        <ImageView
            android:id="@+id/iv_quit_icon"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_quit"
            app:layout_constraintStart_toStartOf="@id/view_bg_top"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_quit_title"
            style="@style/TextAppearance.Genti.Headline4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="@string/setting_quit_tv_title"
            app:layout_constraintEnd_toEndOf="@id/view_bg_top"
            app:layout_constraintStart_toStartOf="@id/view_bg_top"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_quit_subtitle"
            style="@style/TextAppearance.Genti.BodySmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/setting_quit_tv_subtitle"
            app:layout_constraintEnd_toEndOf="@id/view_bg_top"
            app:layout_constraintStart_toStartOf="@id/view_bg_top"
            app:layout_constraintTop_toBottomOf="@id/tv_quit_title" />

        <TextView
            android:id="@+id/btn_return"
            style="@style/TextAppearance.Genti.Headline4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/shape_green1_fill_6_rect"
            android:paddingHorizontal="35dp"
            android:paddingVertical="6dp"
            android:text="@string/setting_logout_btn_return"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/view_bg_top"
            app:layout_constraintTop_toBottomOf="@id/tv_quit_subtitle" />

        <TextView
            android:id="@+id/btn_quit"
            style="@style/TextAppearance.Genti.BodySmall"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/shape_green4_fill_6_rect"
            android:gravity="center"
            android:text="@string/setting_quit_btn_quit"
            android:textColor="#989898"
            app:layout_constraintBottom_toBottomOf="@id/btn_return"
            app:layout_constraintEnd_toStartOf="@id/btn_return"
            app:layout_constraintStart_toStartOf="@id/view_bg_top"
            app:layout_constraintTop_toTopOf="@id/btn_return" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>